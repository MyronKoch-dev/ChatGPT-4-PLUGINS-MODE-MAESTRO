{
  "manifest_version": 3,
  "name": "GPT-4 Dropdown Resizer",
  "version": "0.1",
  "description": "Lengthens chatGPT-4's woefully tiny Plugins Dropdown and provides a direct GPT-4 With Plugins (no detours!) chat button.",
  "permissions": ["scripting"],  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/?model=gpt-4-plugins"],
      "js": ["contentScript.js"]
    }
  ]
}
